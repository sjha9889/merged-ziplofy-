{% for order in orders %}
<div class="order-card" data-order-id="{{ order.id }}">
  <div class="order-header">
    <div class="order-info">
      <div class="order-number">#{{ order.id }}</div>
      <div class="order-date">Placed on {{ order.date }}</div>
    </div>
    <div class="order-status {{ order.status }}">{{ order.status | capitalize }}</div>
  </div>
  <div class="order-items">
    {% for item in order.items %}
    <div class="order-item">
      <img src="{{ item.image }}" alt="{{ item.name }}">
      <div class="item-info">
        <h4>{{ item.name }}</h4>
        <p>Quantity: {{ item.quantity }}</p>
      </div>
      <div class="item-price">{{ item.price }}</div>
    </div>
    {% endfor %}
  </div>
  <div class="order-footer">
    <div class="order-total">Total: {{ order.total }}</div>
    <div class="order-actions">
      <button class="btn-secondary" data-account-order-view="{{ order.id }}">View Details</button>
      <button class="btn-primary" data-account-order-reorder="{{ order.id }}">Reorder</button>
    </div>
  </div>
</div>
{% endfor %}
