<div class="category-card">
    <div class="category-image">
        <img src="{{ category.image }}" alt="{{ category.name }}" onerror="this.src='https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=400&h=300&fit=crop'">
        <div class="category-overlay">
            <h3>{{ category.name }}</h3>
            <p>{{ category.description }}</p>
            <a href="products.html?category={{ category.slug }}" class="category-btn">Explore</a>
        </div>
    </div>
</div>

