<div class="summary-item">
  <img src="{{ item.image }}" alt="{{ item.title }}" loading="lazy" onerror="this.src='https://via.placeholder.com/60x60?text=No+Image'">
  <div class="item-info">
    <h4>{{ item.title }}</h4>
    <p>Qty: {{ item.quantity }}</p>
    <span>{{ item.lineTotalFormatted }}</span>
  </div>
</div>

